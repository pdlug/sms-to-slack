{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es2020",
    "lib": [
      "es2020",
      "webworker"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "incremental": true,
    "types": ["@cloudflare/workers-types"]
  },
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ],
  "include": ["src"]
}
